                  },
                  "bankName": {
                    "type": "string"
                  },
                  "routingNumber": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "description": "Required if currency is COP"
                  }
                }
              }
            }
          }
